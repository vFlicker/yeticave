<%- contentFor('content') %>

<form action="/lots/add/" method="post" enctype="multipart/form-data" class="form form--lot">
  <h1>Create a new lot</h1>

  <div class="form__container">
    <div class="form__item">
      <label for="id_title">Title *</label>
      <input type="text" name="title" placeholder="Enter title" maxlength="255" required id="id_title">
    </div>
    <div class="form__item">
      <label for="id_category">Category *</label>
      <select name="categoryId" id="id_category">
        <% categories.forEach((category)=> { %>
        <option value="<%= category.id %>">
          <%= category.name %>
        </option>
        <% }) %>
      </select>
    </div>
  </div>
  <div class="form__item">
    <label for="id_description">Description</label>
    <textarea name="description" cols="40" rows="10" placeholder="Enter description" maxlength="1000" id="id_description"></textarea>
  </div>
  <div class="form__container">
    <div class="form__item">
      <label for="startingPrice">Starting price *</label>
      <input type="text" name="startingPrice" placeholder="Enter bid" required id="startingPrice">
    </div>
    <div class="form__item">
      <label for="finishedAt">Finished at *</label>
      <input type="datetime-local" name="finishedAt" placeholder="Enter finish date" required id="finishedAt">
    </div>
  </div>

  <div class="form__item">
    <label for="lot-photo">Image *</label>
    <input type="file" name="lot-photo" required id="lot-photo">
  </div>

  <button type="submit" class="button">Add lot</button>

  <%- include("../../partials/error-messages", { errors }) %>
</form>