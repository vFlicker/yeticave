<%- contentFor('content') %>

<form action="/create-lot/" method="post" class="form form--lot ">
  <h1>Create a new lot</h1>

  <input type="hidden" name="csrfmiddlewaretoken" value="RgOvcWFEqms587cxUkj3uJVDwgahYuDkJUSxPmdWh5CT639W3IEo8xqs3rqehyf0">

  <div class="form__container">
    <div class="form__item">
      <label for="id_title">
        Title
        *
      </label>
      <input type="text" name="title" placeholder="Enter title" maxlength="255" required id="id_title">
    </div>
    <div class="form__item">
      <label for="id_category">
        Category
        *
      </label>
      <select name="category" id="id_category">
        <option value="1">Boards</option>

        <option value="2">Attachment</option>

        <option value="3">Boots</option>

        <option value="4">Clothing</option>

        <option value="5">Tools</option>

        <option value="6">Other</option>

      </select>
    </div>
  </div>
  <div class="form__item">
    <label for="id_description">
      Description

    </label>
    <textarea name="description" cols="40" rows="10" placeholder="Enter description" maxlength="1000" id="id_description"></textarea>
  </div>
  <div class="form__container">
    <div class="form__item">
      <label for="id_starting_price">
        Starting price
        *
      </label>
      <input type="text" name="starting_price" placeholder="Enter bid" required id="id_starting_price">
    </div>
    <div class="form__item">
      <label for="id_finished_at">
        Finished at
        *
      </label>
      <input type="datetime-local" name="finished_at" placeholder="Enter finish date" required id="id_finished_at">
    </div>
  </div>

  <div class="form__item">
    <label for="id_image_url">
      Image url
      *
    </label>
    <input type="url" name="image_url" placeholder="Enter image url" maxlength="200" required id="id_image_url">
  </div>

  <button type="submit" class="button">Add lot</button>


</form>