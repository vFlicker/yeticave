  <section class="lots">
    <div class="lots__header">
      <h2>Open lots</h2>
    </div>
    <ul class="lots__list">
      <% lots.forEach(function(lot) { %>
      <%- include('../../../common/views/partials/card.ejs', { lot }) %>
      <% }); %>
    </ul>

    <?php require_once('_pagination.php') ?>
  </section>
